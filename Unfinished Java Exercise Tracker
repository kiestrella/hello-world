public class ProDoc 
{
	final static int MAX = 1;
	public static void main(String[] args) 
	{
		Scanner in = new Scanner(System.in);
		// TODO Auto-generated method stub//input		
		double [] dAll = new double[MAX];										// holds Total calories
		String [] strDay = new String [MAX];									// holds Users Workout Days
		String [] strFinalCal =  new String [MAX];								// holds Users Total Calories
		String strExerciseCode = "";											// hold's User’s exercise Code
		String strName= "";														//Print Header placehr older
		String strSport="";														//Users' Sport
		String strName1= "";													//null
		String strExerciseName = "";											//Print Header placeholder
		String strExerciseName1 = "";											//null
		
		//Declaration
				String strTemp = "";
				  Scanner in1 = new Scanner(System.in);
				  double dWeightPounds = 0.0;     		// weight of individual in pounds
				  double dHeightInches = 0.0;     		// height of individual in inches
				  double dWeightKG = 0.0;     			// weight of individual	in kilograms
				  double dHeightM = 0.0;     			// height of individual	in meters
				  double dBMI = dWeightPounds/dHeightInches;		// Body Mass Index of individual
				  String strGender;									// Gender
				  String strName2;									//Name
				  String strMsg;  									// Holds input string question 
				
				// input
				  strMsg = "Enter Your Name";
				  strName = JOptionPane.showInputDialog(strMsg);
				  System.out.print("Welcome to Our Program!\n");
				  System.out.println("Hello " + strName + "!, Tell us about yourself");
				  
				  strMsg = "Enter Gender # \n Female \n Male";
				  strGender = JOptionPane.showInputDialog(strMsg);
				  System.out.println(strGender);
				  
				// process
				  System.out.println("Enter Weight");				//Turn into JOPTIONs
				  dWeightPounds = in1.nextDouble();
				  System.out.println("Enter Height (Inches)");
				  dHeightInches = in1.nextDouble();
				  
				  dWeightKG = dWeightPounds * 0.45;
				  dHeightM = (dHeightInches * 0.025)*(dHeightInches * 0.025);
				  dBMI = dWeightKG/dHeightM;
				 System.out.println("Your BMI is " + dBMI);
				 
				// output
				  if(dBMI<= 18.5)
					  System.out.println("Underweight, we have a little work to do!");
				  else if (dBMI >= 18.5 && dBMI <= 24.9)
					  System.out.println("Normal Weight, great job, lets keep it up!"); 
				  else if(dBMI >= 24.9 && dBMI <= 29.9)
					  System.out.println("Overweight, we have a little work to do!");
				  else
					  System.out.println("Obese, we have a lot of work to do!");
				  
		//Inputs
				  
		String strExercises = PrintOptions();
		strSport = GetSport();	
		strExerciseCode = 	GetExerciseCode();
		strExerciseName = GetExercise(strExerciseCode);
		
		for (int i = 0; i < MAX; i++) 											//this is the main loop to track Calories lost 
